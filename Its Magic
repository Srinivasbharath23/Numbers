#include <iostream>
using namespace std;
int main() {
    int n , ary[1000001] , index=-1;
    long sum=0 , min=-1 , diff=-1;
    cin>>n;
    for(int i=0;i<n;i++)
	{
        cin>>ary[i];
        sum += ary[i];
    }
    for(int i=0;i<n;i++)
	{
        diff = sum-ary[i];
        if(diff%7==0)
		{
            if(min==-1)
			{
             min=ary[i];
             index = i;
             }
			else
			 {
              if(ary[i]<min)
			  {
				min=ary[i];
                index = i;
              }
            }
        }
    }
    cout<<index<<endl;
    return 0;
}
